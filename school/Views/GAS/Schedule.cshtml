@using Language=school.Language.GAS.Schedule.Schedule;
@model school.Models.schedule
@{
    ViewBag.Title = @Language.TSchedule;
    Layout = "~/Views/Layout/_LayoutPage1.cshtml";
}

<body>
    @using (@Html.BeginForm("Schedule", "GAS", FormMethod.Post, new { @class = "form-group", enctype = "multipart/form-data" }))
    {
        <div class="header">
            <h2>@Language.UploadScheduleImages</h2>
        </div>
        <br />

        <div class="body">
            <div class="card" style="padding-left:20px;">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-group">

                            <div class="form-line">
                                @Html.DropDownListFor(Model => Model.ScheTypeId, (SelectList)ViewBag.ScheduleType, Language.ChooseScheduleType, new { @class = "form-control" })
                                <span> @Html.ValidationMessageFor(Model => Model.ScheTypeId, null, new { style = "color:red" })</span>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-group">

                            <div class="form-line">

                                @*<h4 style="color:black">Activity Details</h4>*@
                                @*<textarea style="font-size:17px;" placeholder="Please type what you want...." name="reportdetails" class="form-control"></textarea>*@
                                <input type="file" name="schedulefile" />
                                <span> @Html.ValidationMessageFor(Model => Model.schedulefile, null, new { style = "color:red" })</span>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <input class="btn bg-pink btn-lg btn-block waves-effect" type="submit" value=@Language.Save>
                </div>

            </div>
        </div>
        <br />



    }

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>

